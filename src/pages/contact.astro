---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import Footer from '../components/Footer.astro';

import { SITE } from '../config';

let { title } = SITE;
let description =
  'Reducing HIV vulnerability through peer education, raising of awareness, prevention and treatment in Limpopo and Mpumalanga, South Africa.';
let permalink = 'https://www.hlokomela.org.za/';
---

<html lang="en">
  <head>
    <BaseHead {title} {description} {permalink} />
  </head>

  <body>
    <BlogHeader />
    <div class="wrapper">
      <main class="content">
        <section class="intro">
          <h1 class="latest">{title}</h1>
          <p>{description}</p>
        </section>
        <div class="flex flex-col md:flex-row">
          <div class="bg-gray-300 md:w-1/2 lg:w-1/3 h-64 md:h-auto">
            <section aria-label="Map">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3633.3553198802683!2d30.786878676345726!3d-24.403720493080645!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1ec306b677284535%3A0x9c41296732e96b2d!2sHoedspruit%20Training%20Trust!5e0!3m2!1sen!2snl!4v1683780371879!5m2!1sen!2snl"
                width="600"
                height="450"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
            </section>
          </div>
          <div class="md:w-1/2 lg:w-2/3 h-64 md:h-auto">
            <section aria-label="Form">
              <form action="https://form.taxi/s/coeb174p" method="POST">
                <input type="text" name="Name" />
                <input type="email" name="Email" />
                <textarea name="Message"></textarea>
                <input type="submit" value="Send" />
              </form>
            </section>
          </div>
        </div>
      </main>
      <Footer />
    </div>
  </body>
</html>
